@page "/"
@namespace FrontendLeaflet.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FrontendLeaflet Rover Tracker</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/app.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="favicon.svg" />

    <!-- Leaflet CSS (CDN) -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" crossorigin="" />
    
    <style>
        /* Remove any default spacing that might interfere with fullscreen map */
        body {
            margin: 0 !important;
            padding: 0 !important;
            overflow: hidden;
        }
    </style>
</head>
<body>
    <app>
        <!-- Avoid prerender to prevent JS interop during prerender exceptions -->
        <component type="typeof(App)" render-mode="Server" />
    </app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">X</a>
    </div>

    <!-- Load scripts in specific order -->
    <script src="_framework/blazor.server.js"></script>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Leaflet JS (CDN) - must load before our custom script -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" crossorigin=""></script>
    
    <!-- Our custom leaflet initialization script -->
    <script src="js/leafletInit.js"></script>
    
    <!-- Debug script to verify loading -->
    <script>
        console.log('All scripts loaded, checking function availability...');
        console.log('Leaflet available:', typeof L !== 'undefined');
        console.log('initLeafletMap available:', typeof window.initLeafletMap !== 'undefined');
    </script>
</body>
</html>
